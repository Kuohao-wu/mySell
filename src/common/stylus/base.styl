// 定义基础类模块
body,html
  line-height 1
  font-family 'PingFang SC','STHeitiSC-Light','Helvetica-Light',arial,sans-serif


// 清除浮动
.clearfix
  &::after
    display table
    content ''
    height 0
    clear both

// retina 一像素处理
@media (-webkit-min-device-pixel-ratio:1.5)
  .border-1px
    &::after
      transform:scaleY(0.7)

@media (-webkit-min-device-pixel-ratio:2)
  .border-1px
    &::after
      transform:scaleY(0.5)

